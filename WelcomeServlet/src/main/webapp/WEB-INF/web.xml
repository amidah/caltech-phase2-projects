<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	
	<context-param>
		<param-name>dbName</param-name>
		<param-value>product</param-value>
	</context-param>
	
	<servlet>
		<servlet-name>Welcome</servlet-name>
		<display-name>Welcome</display-name>

		<servlet-class>com.java.servlet.Welcome</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Login</servlet-name>
		<display-name>Login</display-name>
		<description></description>
		<servlet-class>com.java.servlet.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Register</servlet-name>
		<display-name>Register</display-name>
		<description></description>
		<servlet-class>com.java.servlet.Register</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>User</servlet-name>
		<display-name>User</display-name>
		<description></description>
		<servlet-class>com.java.servlet.User</servlet-class>

		<init-param>
			<param-name>appName</param-name>
			<param-value>Estore - Web App</param-value>
		</init-param>
		<init-param>
			<param-name>dbPassword</param-name>
			<param-value>product@1234</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>Welcome</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>User</servlet-name>
		<url-pattern>/user</url-pattern>
	</servlet-mapping>
</web-app>
